##:q: to exit in terminal
alias :q='exit'
##reload: to reload zshrc
alias reload='source $HOME/.zshrc'
##x: alternativ to <ctrl>l when running tmux
alias x='clear'
##xnvimswap: remove the swapfile in neovim
alias xnvimswap='rm $HOME/.local/share/nvim/swap/*.swp'
##sysup: update the system
alias sysup='sudo pkcon refresh -p && sudo pkcon update -p && sudo apt autoremove && sudo flatpak update && sudo fwupd.fwupdmgr update'
##fwup: update only the firmware
alias fwup='sudo fwupd.fwupdmgr update'
##flatup: update only flatpak packages
alias flatup='sudo flatpak update'
##vim: starts nvim
alias vim='nvim'
##gvim: starts glrnvim (graphical terminal inplemtation for neovim writen in rust)
alias gvim='glrnvim'

# alias to directories
##dotfiles: cd to dotfiles folder
alias dotfiles='cd $HOME/repositories/dotfiles && exa -la --git'
##scripts: cd to scripts files folder
alias scripts='cd $HOME/repositories/scripts && exa -la --git'
##config: cd to .config folder
alias config='cd $HOME/.config'
##bin: cd to $HOME/bin folder
alias bin='cd $HOME/bin'
##repos: cd to repositories folder
alias repos='cd $HOME/repositories'
##lbin: cd to /usr/local/bin folder
alias lbin='cd /usr/local/bin'
##py: cd to project folder - python
alias py='cd $HOME/projects/python'
##rs: cd to project folder - rust
alias rs='cd $HOME/projects/rust'
##ja: cd to project folder - java
alias ja='cd $HOME/projects/java'
##next: cd to nextcloud folder
alias next='cd $HOME/nextcloud'
##doc: cd to documents folder
alias doc='cd $HOME/nextcloud/dokument'
##notes: cd to notes folder
alias notes='cd $HOME/nextcloud/notes'
##dl: cd to download folder
alias dl='cd $HOME/hämtningar'


# alias to files
##vimrc: open and edit neovim's config file init.vim
alias vimrc='$EDITOR $HOME/repositories/dotfiles/.config/nvim/init.vim'
##trirc: open and edit tridactyls config file tridactylrc
alias trirc='$EDITOR $HOME/repositories/dotfiles/.config/tridactyl/tridactylrc'
##tmuxrc: open and edit tmux's config file tmux.conf
alias tmuxrc='$EDITOR $HOME/repositories/dotfiles/.tmux.conf'
##zshrc: open and edit zsh's config file .zshrc
alias zshrc='$EDITOR $HOME/repositories/dotfiles/.zshrc'
##zshalias: open and edit zsh_alias
alias zshalias='$EDITOR $HOME/repositories/dotfiles/zsh_alias'
##inputrc: open and edit .inputrc
alias inputrc='$EDITOR $HOME/repositories/dotfiles/.inputrc'
##alacr: open and edit alacritty's config file alacritty.yml
alias alacr='$EDITOR $HOME/repositories/dotfiles/.config/alacritty/alacritty.yml'
##shop: open and edit the shopping list
alias shop='$EDITOR $HOME/nextcloud/dokument/inköpslistor/Shopping+List.lst'
alias SSH='cat $HOME/.ssh/ssh_alias'

# alias to add to applications
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ls='exa --git'
alias ll='exa -l --git'
alias la='exa -la --git'
alias l='exa -F --git'
alias lt='exa -T --git'
